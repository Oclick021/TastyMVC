@model TastyMVC.ViewModels.AddFoodStepViewModel

@using (Html.BeginForm(
    "AddStep", "Recipes", FormMethod.Post, new { enctype = "multipart/form-data" })
)
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Recipe</h4> 
        <hr />
        @Html.HiddenFor(x => x.RecipeID)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(x => x.Title, htmlAttributes: new { @class = "control-label " })
            @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description, htmlAttributes: new { @class = "control-label " })
            @Html.EditorFor(x => x.Description, new { htmlAttributes = new { @class = "form-control", @rows = 3 } })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="ImageInput">Image</label>
            <input type="file" name="ImageInput" accept="image/*" class="form-control-file" id="ImageInput">
        </div>

        <div class="form-group col-md-6">
            <input type="submit" value="Add step" class="btn btn-default" />
        </div>
    </div>
}
