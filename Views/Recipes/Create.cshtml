@model TastyMVC.Models.Recipe

@{
    ViewBag.Title = "New Recipe";
}

<h2>Create</h2>

@using (Html.BeginForm(
    null, null, FormMethod.Post)
)
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Recipe</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-row ">
            <div class="form-group col-6">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-6">
                @Html.LabelFor(model => model.portion, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.portion, new
                {
                    htmlAttributes = new { @class = "form-control", @type = "number" }
                })
                @Html.ValidationMessageFor(model => model.portion, "", new { @class = "text-danger", @min = 1 })
            </div>
        </div>
        <div class="form-group">
            <label for="ThumbnailInput">ThumpnailInput</label>
            @if (Model.Thumbnail?.Data.Length > 0)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.Thumbnail.Data)" alt="" />
            }
            <input type="file" name="file" accept="image/*" class="form-control-file" id="ThumbnailInput">
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
