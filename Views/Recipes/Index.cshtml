@model IEnumerable<TastyMVC.Models.Recipe>

@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Thumbnail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.portion)
        </th>
        <th>Published</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="align-middle">
                <img src="@item.Thumbnail.GetImageSource()" style="max-height:100px ; max-width:100px" alt="" />
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.portion)
            </td>
            <td class="align-middle">
                @if (item.Published)
                {
                    <a href="/Recipes/publish?Id=@item.Id">
                        <i class="fas fa-check text-success"></i>
                    </a>
                }
                else
                { <a href="/Recipes/publish?Id=@item.Id">
                        <i class="fas fa-times text-danger"></i>

                    </a>
                }
            </td>
            <td class="align-middle">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
